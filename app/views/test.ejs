<body ng-controller="mainController">

<section id="wrapper">

<header>
<div id="logo"><img src="../img/logo.png" /></div><!--end of logo-->
<div id="title"><h1><%= title %></h1></div><!--end of title-->
<div id="login">
	<% if(userFullName) { %>
	<h2>Log In Works, <%=userFullName%></h2>
	<a href="/signout">Sign Out</a>
	<%} else{%>
	<a href="/signup" class="signs">Sign Up</a>
	<a href="/signin" class="signs">Sign In</a>
	<%}%>
</div><!--end of login-->
</header>
<nav><% include nav %></nav>

<section id="content">

<div id="productItem">

	<ul id="catalog">
				
		<li>
			<div class="the_name"><h4>Name: <%= product.name %></h4></div>
			<div class="the_photo"><img src="<%=product.photo%>" alt="<%= product.name %>" /></div>
			<div class="price"><h4>Price: $<%= product.price %></h4></div>
			<h4><a href="#" onclick="simpleCart.add('name=<%= product.name %>','price=<%=product.price %>');return false;"> add to cart</a></h4>
			<!-- ,'image=images/thumbs/redShoe.jpg' -->
		</li>
	</ul>
	<!--
	<div class="details"> <h5><%= product.name %> </h5> </div>
	<div class="details"> <h5>$<%=product.price %> </h5></div><
	<div class="details"><img src="<%=product.photo%>"> </div>
	<div class="details"><p> <%=product.text%></p></div>

	<div class="details"><button type="submit" id="cart_btn">Add to Cart</button></div><!--end of details-->

